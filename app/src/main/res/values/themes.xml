<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FARCCAndroid" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/cantarell</item>
        <item name="android:background">@color/widget_background</item>
        <item name="android:buttonStyle">@style/customButtonStyle</item>
        <item name="android:textViewStyle">@style/customTextStyle</item>
        <item name="android:spinnerItemStyle">@style/customSpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/customSpinnerItemStyle</item>
        <item name="android:dropDownListViewStyle">@style/customListItemStyle</item>
    </style>

    <style name="customListItemStyle">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="customSpinnerItemStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="customButtonStyle">
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="customTextStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="customConstraintLayoutStyle">
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="customSwitchStyle">
    </style>

    <style name="customSpinner">
        <!--<item name="android:windowFrame">4dp</item>-->
    </style>

    <style name="divider">
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!--
    <style name="ApplicationStyle" parent="android:Theme">
        <item name="android:buttonStyle"
    </style>
    -->
</resources>