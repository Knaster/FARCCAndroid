<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/harmonicEditMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listviewConsole"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/texteditConsoleCommand"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"/>

    <TextView
        android:id="@+id/textConsoleCommandLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Send:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/texteditConsoleCommand"
        app:layout_constraintTop_toBottomOf="@id/listviewConsole"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/texteditConsoleCommand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textConsoleCommandLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listviewConsole"
        app:layout_constraintBottom_toBottomOf="parent"
        android:imeOptions="actionDone"
        android:imeActionLabel="Done"
        android:singleLine="true"
        android:inputType="textNoSuggestions"
        android:text=""/>

</androidx.constraintlayout.widget.ConstraintLayout>