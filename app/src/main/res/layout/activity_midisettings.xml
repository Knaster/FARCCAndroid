<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MIDISettingsMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    tools:context=".MidiSettings">

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentMIDInavigation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        class="com.example.FARCCAndroid.GlobalNavigation"
        android:tag=""
        tools:layout="@layout/fragment_globalnavigation"/>

    <ScrollView
        android:id="@+id/scrollMIDIMapping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        android:fadeScrollbars="false"
        android:scrollbarFadeDuration="0"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentMIDInavigation">
<!-- app:layout_constraintTop_toBottomOf="@+id/dividerMIDISettingsHeading" -->

        <LinearLayout
            android:id="@+id/scrollLinearLayoutMIDISettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textMIDISettingsHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MIDI Settings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                style="@style/divider"
                android:id="@+id/dividerMIDISettingsHeading"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/textMIDISettingsHeading"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textMIDIConfiguration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="MIDI Configuration"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/spinnerMIDIConfiguration" />

                <Spinner
                    android:id="@+id/spinnerMIDIConfiguration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/textMIDIConfiguration" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/buttonMIDIConfigurationAdd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toStartOf="@id/buttonMIDIConfigurationRemove"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <Button
                    android:id="@+id/buttonMIDIConfigurationRemove"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toStartOf="@id/buttonMIDIConfigurationRename"
                    app:layout_constraintStart_toEndOf="@id/buttonMIDIConfigurationAdd"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <Button
                    android:id="@+id/buttonMIDIConfigurationRename"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rename"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/buttonMIDIConfigurationRemove"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                style="@style/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textMIDIChannel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MIDI Channel"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnerMIDIChannel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                style="@style/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->

            <TextView
                android:id="@+id/textMIDINoteOnHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NoteOn mapping" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textMIDINoteOnVelocityToHammer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Velocity to Hammer"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <SeekBar
                    android:id="@+id/seekbarMIDINoteOnVelocityToHammer"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:max="512"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textMIDINoteOnVelocityToHammer"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <CheckBox
                android:id="@+id/checkboxMIDINoteOnSendHammerOnNewNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Send hammer only on new notes" />

            <CheckBox
                android:id="@+id/checkboxMIDINoteOnSendMuteRest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Send mute rest" />

            <!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->

            <TextView
                android:id="@+id/textMIDINoteOffHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="NoteOff mapping" />

            <CheckBox
                android:id="@+id/checkboxMIDINoteOffSendFullMute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Send mute full mute" />

            <CheckBox
                android:id="@+id/checkboxMIDINoteOffTurnOffMotor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Turn off motor" />

            <!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->

            <TextView
                android:id="@+id/textMIDIPitchBendHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pitch bend mapping" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textMIDIPitchBendTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Map to"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnerMIDIPitchBendTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textMIDIPitchBendTarget" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textMIDIPitchBendScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Scale"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <SeekBar
                    android:id="@+id/seekbarMIDIPitchBendScale"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:max="512"
                    android:tag="pb"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textMIDIPitchBendScale"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->

            <TextView
                android:id="@+id/textMIDISustainHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Sustain pedal mapping" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textMIDISustainTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Map to"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnerMIDISustainTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textMIDISustainTarget" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <CheckBox
                android:id="@+id/checkboxMIDISustainInvert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Invert" />

            <!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->

            <TextView
                android:id="@+id/textMIDIPolyAftertouchHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Poly Aftertouch mapping" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textMIDIPolyAftertouchTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Map to"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnerMIDIPolyAftertouchTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textMIDIPolyAftertouchTarget" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textMIDIPolyAftertouchScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Scale"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <SeekBar
                    android:id="@+id/seekbarMIDIPolyAftertouchScale"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:max="512"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textMIDIPolyAftertouchScale"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->

            <TextView
                android:id="@+id/textMIDIChannelAftertouchHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Channel Aftertouch mapping" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textMIDIChannelAftertouchTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Map to"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnerMIDIChannelAftertouchTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textMIDIChannelAftertouchTarget" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textMIDIChannelAftertouchScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Scale"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <SeekBar
                    android:id="@+id/seekbarMIDIChannelAftertouchScale"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:max="512"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textMIDIChannelAftertouchScale"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->

            <View
                style="@style/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/textMIDIAdvancedMapping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advanced mapping" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textMIDIAdvancedEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Map MIDI event"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnerMIDIAdvancedEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toStartOf="@id/buttonMIDIAdvancedEventDescription"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textMIDIAdvancedEvent"  />

                <Button
                    android:id="@+id/buttonMIDIAdvancedEventDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="?"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textMIDIAdvancedEvent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Event commands"
                android:textSize="18sp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/texteditMIDIAdvancedEditInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:text="MBR:0"
                android:imeOptions="actionDone"
                android:imeActionLabel="Done"
                android:singleLine="true"
                android:inputType="textNoSuggestions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/buttonMIDIAdvancedAddCC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Add CC"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toStartOf="@id/buttonMIDIAdvancedRemoveCC"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.33" />

                <Button
                    android:id="@+id/buttonMIDIAdvancedRemoveCC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Remove CC"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/buttonMIDIAdvancedAddCC"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.33" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                style="@style/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMIDIRestoreDefaults"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:gravity="center"
                android:text="Restore MIDI Defaults"/>

            <View
                style="@style/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="80dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>