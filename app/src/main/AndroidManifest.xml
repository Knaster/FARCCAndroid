<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.usb.host" android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.USB_PERMISSION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FARCCAndroid"
        tools:targetApi="31">
        <activity
            android:name=".MidiSettings"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".HarmonicEditor"
            android:exported="false"
            android:label="Harmonic Editor"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.FARCCAndroid" />
        <activity
            android:name=".PianorollActivity"
            android:exported="false" />
        <activity
            android:name=".Console"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".SensorActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".XYController"
            android:exported="false"
            android:label="@string/XYController"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.FARCCAndroid" />
        <activity
            android:name=".MainActivity"
            android:directBootAware="true"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FARCCAndroid"
            tools:ignore="DiscouragedApi,LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>